<!doctype html>
<html>

<head>
	<title>Node Authentication</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<!-- load bootstrap css -->
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
	<link rel="stylesheet" type="text/css" href="/css/style.css">
	<!-- load fontawesome -->

	<script type="text/javascript" src="https://code.jquery.com/jquery-1.11.3.min.js"></script>
	<!-- Include Date Range Picker -->
	<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/js/bootstrap-datepicker.min.js"></script>
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/css/bootstrap-datepicker3.css" />
	<script>
		$(document).ready(function() {
			var date_input = $('input[name="date"]'); //our date input has the name "date"
			var container = $('.bootstrap-iso form').length > 0 ? $('.bootstrap-iso form').parent() : "body";
			date_input.datepicker({
				format: 'yyyy-mm-dd',
				container: container,
				todayHighlight: true,
				autoclose: true,
			})
		})
	</script>
</head>

<body>
	<header>
		<nav class="navbar navbar-default">
			<div class="container-fluid">
				<div class="navbar-header">
					<a class="navbar-brand" href="/">Flight Reservation System</a>
				</div>
				<ul class="nav navbar-nav">
					<li><a href="/search">Search Flights</a></li>
                    <li><a href="/seating">Reserve Seat</a></li>
					<li><a href="/login">Login</a></li>
					<li><a href="/signup">Sign Up</a></li>
					<li><a href="/account">Account</a></li? </ul>
			</div>
		</nav>
	</header>
  <div class="container" style="background-color: #303030">
	<table class="table table-responsive table-hover" id="table">
		<thead>
			<tr>
				<th>AirlineCode</th>
				<th>FlightNum</th>
				<th>FlightDate</th>
				<th>Origin</th>
				<th>DepartTime</th>
				<th>Destination</th>
				<th>ArrivalTime</th>
			</tr>
		</thead>
		<tbody>
			<% flights.forEach(function (flight) { %>
				<tr>
					<td><%= flight.AirlineCode %></td>
					<td><%= flight.FlightNum %></td>
					<td><%= flight.FlightDate %></td>
					<td><%= flight.Origin %></td>
					<td><%= flight.DepartTime %></td>
					<td><%= flight.Destination %></td>
					<td><%= flight.ArrivalTime %></td>
				</tr>
			<% }) %>
		</tbody>
	</table>
</div>
</body>
